array_sep(round, nl)

round = player_1 -> P1 & ws & player_2 -> P2 $ [P1, P2]

player_1 = hand_shape

player_2 = peek(hand_shape) + end_goal

hand_shape = record1("hand_shape", rock | paper | scissors)

end_goal = record1("end_goal", lose | win | draw)

rock = "A" | "X" $ "rock"
paper = "B" | "Y" $ "paper"
scissors = "C" | "Z" $ "scissors"

lose = "X" $ "lose"
draw = "Y" $ "draw"
win = "Z" $ "win"
