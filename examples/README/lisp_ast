#!/usr/bin/env possum

input(program)

w = maybe(whitespace)

program = ast.node(array_sep(expr, w), $"program")

expr =
  ast.node(number, $"number") |
  ast.node(json.string, $"string") |
  ast.node(apply, $"apply") |
  ast.node(atom, $"atom")

apply = "(" > maybe_array_sep(expr, w) < ")"

atom = chars_until(non_atom)
non_atom = "(" | ")" | '"' | space | newline
