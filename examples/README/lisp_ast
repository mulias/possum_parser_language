#!/usr/bin/env possum

input(program)

w = maybe(whitespace)

program = ast_node($"program", array_sep(expr, w))

expr =
  ast_node($"number", number) |
  ast_node($"string", json_string) |
  ast_node($"apply", apply) |
  ast_node($"atom", atom)

apply = "(" > maybe_array_sep(expr, w) < ")"

non_atom_char = "(" | ")" | '"' | space | newline
atom = chars_until(non_atom_char)
